<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/black_transparent" />
            <gradient android:angle="-90" android:startColor="@color/black_transparent" android:endColor="@color/black_transparent"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
            <solid android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="-90" android:startColor="@color/colorAccent" android:endColor="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>
